{
  "blocks": [
    {
      "type": "section",
      "text": {
        "type": "mrkdwn",
        "text": "*:no_entry: Failed PR Validation*"
      }
    }
  ],
  "attachments": [
    {
      "color": "#eb3a34",
      "blocks": [
        {
          "type": "section",
          "fields": [
            {
              "type": "mrkdwn",
              "text": "*Author*\n${{ github.payload.pull_request.user.name }}\n<${{ github.payload.pull_request.user.email }}>"
            }
          ],
          "accessory": {
            "type": "image",
            "image_url": "${{ github.payload.pull_request.user.avatar_url }}",
            "alt_text": "User Profile"
          }
        },
        {
          "type": "section",
          "fields": [
            {
              "type": "mrkdwn",
              "text": "*Repo*\n<${{ github.serverUrl }}/${{ github.payload.repository.full_name }}|${{ github.payload.repository.full_name }}>"
            },
            {
              "type": "mrkdwn",
              "text": "*PR*\n<${{ github.payload.pull_request.html_url }}|${{ github.payload.pull_request.title }}>"
            },
            {
              "type": "mrkdwn",
              "text": "*Job*\n`${{ github.job }}`"
            },
            {
              "type": "mrkdwn",
              "text": "*Event Name*\n`${{ github.eventName }}`"
            },
            {
              "type": "mrkdwn",
              "text": "*Workflow*\n`${{ github.workflow }}`"
            },
            {
              "type": "mrkdwn",
              "text": "*Ref*\n${{ github.ref }}"
            },
            {
              "type": "mrkdwn",
              "text": "*Build Logs*\n<${{ github.serverUrl }}/${{ github.payload.repository.full_name }}/actions/runs/${{ github.runId }}|View Logs>"
            }
          ]
        }
      ]
    }
  ]
}
